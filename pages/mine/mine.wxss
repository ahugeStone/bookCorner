@import "../../template/cell_template.wxss";

.container {
  align-items: flex-start;
  overflow: scroll;
  height: 100%;
} 
.mine_title {
  margin-top: 10px;
  margin-bottom: 10px;
  width: 95%;
  color: #999999;
  font-size: 14px;
  flex-shrink: 0;
}
.mine_title text{
  
  font-size:15px;
  color:#222222;
  border-left:2px solid #4A89DC;
  padding-left: 5%

}
.mine_tips {
  align-self: center;
  color: #999999;
  font-size: 14px;
  flex-shrink: 0;
}
.userInfo{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #FFFFFF;
  width: 100%;
  height: 100px;
  flex-shrink:0;

}
.userInfo image{
  width: 56px;
  height: 56px;
 
  border-radius: 100px;
}
.userInfo view{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  color: #222222;
  font-size: 15px;
  margin-left: 15px;
}
.username{
  font-weight: bold;
}
.moreInfo{
  margin-top: 15px;
  margin-bottom: 15px;
  display: flex;
  flex-direction: row;
  font-size: 13px;
  justify-content: center;
  align-items: center;
  color: #4A89DC;
  flex-shrink: 0;
  width: 100%
}
.add_book{
  display:flex;
  align-items: center;
  justify-content: center;
  height:50px;
  width:85%;
  border:1px dashed #999999;
  margin-left:7.5%;
  margin-top:15px;
  font-size: 15px;
  color: #4A89DC;
}
.add_book image{
  height: 18px;
  width:18px;
}