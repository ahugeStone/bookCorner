/* pages/message/message.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.message_item {
  width: 100%;
  margin-top: 3px;
  display: flex;
  flex-direction: column;
  background: #FFFFFF;
}
.message_top {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding-top: 10px;
  padding-bottom: 5px;
}
.message_icon {
  width: 16px;
  height: 16px;
  margin-left:5%;
  margin-top:3px;
}
.message_icon image {
  width: 100%;
  height: 100%;
}
.message_review {
  display: flex;
  flex-direction: column;
  margin-left:10px;
}
.message_detail {
  font-size: 13px;
  color: #222222;
  margin-left:5%;
  margin-right:5%;
  margin-bottom:10px;
}
.detail_top span{
  font-size: 15px;
  color: #222222;
}
.detail_top em {
  font-size: 13px;
  color: #666666;
  margin-left: 10px;
}
.detail_bottom {
  font-size: 13px;
  color: #666666;
}