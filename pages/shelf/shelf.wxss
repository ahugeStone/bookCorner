/**shelf.wxss**/
@import "../../template/cell_template.wxss";
@import "popup.wxss";

.book_list {
  width:100%;
  overflow: scroll;
}
.search_btn {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-right: 10px;
  font-size: 14px;
  color: #4A89DC;
  flex-shrink: 0;
}
.search_btn text {
  margin-right: 5px;
}
.search_btn image {
  width: 11px;
  height: 11px;
}
.book_propties {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 90%;
  font-size: 15px;

}
.book_propties view {
  width: 90px;
  height: 30px;
  margin-left: 5%;
  border: 1px solid #CCCCCC;
  background: #FFFFFF;
  border-radius: 3px;
  text-align: center;
  line-height: 30px;
}
.popcon > text {
  margin-left: 5%;
  margin-top: 20px;
  margin-bottom: 5px;
}
.popcon {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: 14px;
  color: #222222;
  background: #F2F2F2;
}
.confirm_btn {
  width: 90%;
  background-color: #4A89DC;
  align-self: center;
  border-radius: 3px;
  color: #FFFFFF;
  margin-top: 30px;
  margin-bottom: 20px;
}
.book_name {
  margin-top: 15px;
  margin-left: 5%;
  width: 90%;
}
.book_name input {
  background: #FFFFFF;
  height: 40px;
}
.focus {
  border: 1px solid #FF6666!important;
  color: #FF6666;
}
.mine_tips {
  text-align: center;
  color: #444444;
  font-size: 16px;
  flex-shrink: 0;
}