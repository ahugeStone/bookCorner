/* pages/addbook/addbook.wxss */
.container{
  width:100%;
  overflow: scroll;
  height: 100%;
  z-index: 0;
}
.bookName{
  display: flex;
  flex-flow: row;
  width: 100%;
  height: 44px;
  background: #FFFFFF;
  align-items: center;
  margin-top: 2px;
}
.bookName text{
  font-size: 16px;
  color:#222222;
  margin-left: 4%;
  width: 64px;
}
.book_clear_icon {
  width: 28px;
  height: 28px;
  flex:none;
  opacity:0.3;
  margin-left: 4%;
}
.bookName_placeholder{
  color: #CCCCCC;
  font-size: 16px;
}
.input{
  margin-left: 4%;
  font-size: 16px;
  width: 62%;
}
.bookType{
  display: flex;
  background: #FFFFFF;
  width: 100%;
  height: 34px;
  margin-top: 10px;
  padding-top: 10px;
  z-index: 0;
}
.bookType text{
  font-size: 16px;
  color: #222222;
  margin-left: 4%;
  width: 64px;
  margin-top: 2px;
}
.radio-group radio {
  transform:scale(0.8);
  margin-right:5%;
  margin-bottom:20px;
  color: #00c192;
}
.radio-group text {
  font-size: 16px;      
}
.bookType1{
  display: flex;
  background: #FFFFFF;
  width: 100%;
  height: 44px;
  margin-top: 2px;
  margin-bottom: 10px;
}

.bookBrief {
  align-items: flex-start;
  width: 100%;
  background: white;
  /* transform: translateY(150%);
  transition: all 0.4s ease; */
  z-index: 12;
  display: flex;
  flex-direction: column;
  height: 170px;
  margin-top: 10px;
}
.bookBrief textarea{
  display: block;
  position: relative;
  height: 150px;
  width: 92%;
  margin-left: 4%;
  margin-top: 10px;
}
.pholder {
  margin-left: 10px;
  color: #CCCCCC;
  font-size: 16px;
}
.submit {
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: center;
  background: #4A89DC;
  width: 90%;
  margin-right: 5%;
  margin-top: 10px;
  height: 50px;
  border-radius: 3px;
  margin-bottom: 88px;
  z-index: 12;
}
.submit text{
  font-size: 17px;
  color: #FFFFFF;
}
.Uploader{
  display: flex;
  width: 80px;
  height: 80px;
  margin-top: 15px;
  margin-right: 74%;
}
.bookImage_input{
  display: flex;
  flex-direction: column;
  width: 80px;
  height: 80px;
  border:1px dashed #979797;
  margin-top: 15px;
  justify-content: center;
  align-items: center;
  z-index: 12;
}
.bookImage_input image{
  width: 32px;
  height: 26px;
}
.bookImage_input text{
  font-size: 13px;
  color: #999999;
}
.bookImage_preview{
  display: flex;
  width: 80px;
  height: 80px;
  margin-top: 15px;
  z-index: 12;
}
.previewImage{
  width: 80px;
  height: 80px;
}
.delete_img{
  width: 14px;
  height: 14px;
}
.picture{
  display: flex;
  flex-direction: row;
  margin-right: 52%;
}
